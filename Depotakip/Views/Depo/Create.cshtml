@model Depotakip.Models.Depo

@{
    ViewData["Title"] = "Create";
}

<h1>Depo Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DepoId" class="control-label"></label>
                <input asp-for="DepoId" class="form-control" />
                <span asp-validation-for="DepoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kapasite" class="control-label"></label>
                <input asp-for="Kapasite" class="form-control" />
                <span asp-validation-for="Kapasite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonelSayisi" class="control-label"></label>
                <input asp-for="PersonelSayisi" class="form-control" />
                <span asp-validation-for="PersonelSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
               <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

