@model Depotakip.Models.Reyon

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Reyon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReyonAd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReyonAd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReyonImg)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/Image/" + Model.ReyonImg)" asp-append-version="true" width="100" height="100"  />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Depo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Depo.Ad)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ReyonId">Düzenle</a> |
    <a asp-action="Index">Listeye dön</a>
</div>


