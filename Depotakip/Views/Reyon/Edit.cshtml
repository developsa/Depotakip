@model Depotakip.Models.Reyon

@{
    ViewData["Title"] = "Edit";
}



<h4>Reyon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReyonId" />
            <div class="form-group">
                <label asp-for="ReyonAd" class="control-label"></label>
                <input asp-for="ReyonAd" class="form-control" />
                <span asp-validation-for="ReyonAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Depo.Ad" class="control-label"></label>
                <select asp-for="DepoId" class="form-control" asp-items="ViewBag.DepoId"></select>
                <span asp-validation-for="DepoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
  <a asp-action="Index">Listeye Dön</a>
</div>

