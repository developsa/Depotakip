@model Depotakip.Models.Kategori

@{
    ViewData["Title"] = "Edit";
}



<h4>Kategori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KategoriId" />
            <div class="form-group">
                <label asp-for="KategoriAd" class="control-label"></label>
                <input asp-for="KategoriAd" class="form-control" />
                <span asp-validation-for="KategoriAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reyon.ReyonAd" class="control-label"></label>
                <select asp-for="ReyonId" class="form-control" asp-items="ViewBag.ReyonId"></select>
                <span asp-validation-for="ReyonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

